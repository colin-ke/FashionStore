@{
    Layout = null;
    string total = "";
    if(null!=ViewBag.total)
    {
        total = ViewBag.total.ToString();
    }
}

<!DOCTYPE html>

<html>
<head>
    <title>OrderPay</title>
    <script src="/Scripts/jquery-1.7.1.min.js"></script>
    <style type="text/css">
        .center {
            margin-left: auto;
            margin-right: auto;
        }
    </style>
    @if (null != ViewBag.success)
    {
        string msg = ViewBag.success ? "付款成功!!!" : "抱歉，操作失败！";
        <script type="text/javascript">
            $(function () {
                $("h3").text("@msg");
            });
        </script>
    }
</head>
<body>
    <div class="center">
        <h1 align="center">付款页面</h1>
        <p></p>
        <div>
            <h3 align="center">此处省去付款步骤......</h3>
        </div>
        @using (Html.BeginForm())
        {
            if(""!=total)
            {
                <p align="center" class="center">
                    付款金额 ￥@total
                    <input type="submit" value="付款" onclick="return confirm('确认付款');" />
                </p>
            }
        }
    </div>
</body>
</html>
